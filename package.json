{
  "name": "single-spa-inspector",
  "version": "0.1.0",
  "description": "A devtools extension for single-spa applications",
  "main": "borderify.js",
  "scripts": {
    "lint": "web-ext lint",
    "start": "concurrently --kill-others-on-fail --names \"EXT,WPK\" -c \"cyan,magenta\" \"npm:start:firefox\" \"webpack --watch\"",
    "start:firefox": "web-ext run --keep-profile-changes --firefox-profile=single-spa-inspector-dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "single-spa",
    "microservice",
    "javascript",
    "extension",
    "devtools"
  ],
  "author": "Anthony Frehner",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "prettier": "1.16.1",
    "pretty-quick": "^1.10.0",
    "web-ext": "^2.9.3",
    "webextension-polyfill": "^0.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1"
  },
  "browserslist": [
    "last 5 chrome version",
    "last 5 firefox version"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
